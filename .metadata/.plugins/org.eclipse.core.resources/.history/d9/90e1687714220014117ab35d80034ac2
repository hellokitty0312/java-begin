package homework;

import java.util.Scanner;

public class lx7 {

	public static void main(String[] args) {

		String ch = "y";

		do{
		System.out.println("Please input 1.Rock 2.Scissors 3.Paper?");
		Scanner scanner = new Scanner(System.in);

		int computer = scanner.nextInt();
		int player = scanner.nextInt();

		if(player < 1 || player > 3) {
			continue;
		}

		int computer_num = new java.util.Random().nextInt(3);
		computer_num= computer_num + 1 ;


		if(player == computer){
			System.out.println("draw");
		}
		else if(player - computer == -1 || player - computer == 2){
			System.out.println("you win !!!");
		}
		else{
			System.out.println("you lose...");
		}
		ch = scanner.next();
		ch = ch.toLowerCase().trim();
		}
		while(ch.equals("y"));


		}
	}

